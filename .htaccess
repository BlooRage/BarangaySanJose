Options -Indexes

<IfModule mod_rewrite.c>
RewriteEngine On

# Block hidden files/folders (except ACME challenge paths if ever used)
RewriteRule "(^|/)\.(?!well-known/)" - [F,L]

# Block repository and editor artifacts
RewriteRule "(^|/)\.git" - [F,L,NC]
RewriteRule "(^|/)\.svn" - [F,L,NC]
RewriteRule "(^|/)desktop\.ini$" - [F,L,NC]
RewriteRule "(^|/)\.DS_Store$" - [F,L,NC]

# Block sensitive docs and config-like files that should never be public
RewriteRule "(^|/)DATABASE QUERIES\.txt$" - [F,L,NC]
RewriteRule "(^|/)composer-email-handler/(composer\.(json|lock)|vendor/)" - [F,L,NC]
RewriteRule "(^|/).*\.(sql|bak|old|orig|ini|log|env)$" - [F,L,NC]
</IfModule>
